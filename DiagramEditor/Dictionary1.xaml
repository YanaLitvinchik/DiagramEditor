<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DiagramEditor">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Control.FontSize" Value="18"/>
    </Style>
    <Style TargetType="GroupBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Padding" Value="10"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource baseFont}">
        <Setter Property="Foreground" Value="Navy"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="LightPink"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource baseFont}">
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="ListBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="LightCoral"/>
    </Style>
</ResourceDictionary>